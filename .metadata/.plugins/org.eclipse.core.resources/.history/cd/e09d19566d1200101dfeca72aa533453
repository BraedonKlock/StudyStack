package StudyStack;

public class NotesMenu {
	
	public static void notesMenu() throws Exception {
		int option = 0;
		
		do {
			try {
			CourseList.loadFromFile();
			printLogo();
			DateTime();
			notesShowMenu();
			option = Integer.parseInt(scanner.nextLine().trim());
			switch (option) {
			case 1: try {
					NotesManager.CreateNote();
					} catch (StudyStackException e){
						System.out.println(e.getMessage());
					}
					break;
					
			case 2: try {
					NotesManager.editNote();
					} catch (StudyStackException e){
					System.out.println(e.getMessage());
					}
					break;
					
			case 3: try {
					NotesManager.deleteNote();
					} catch (StudyStackException e){
					System.out.println(e.getMessage());
					}
					break;
					
			case 4:try {
					NotesManager.viewNote();
					} catch (StudyStackException e){
						System.out.println(e.getMessage());
					}
					break;
					
			case 5: Interface.mainMenu();
					break;
					
			default: System.out.println("\n*Not a valid option*\n");
			}
			} catch(NumberFormatException e) {
				System.out.println("\n*Invalid option! try again*\n");
			}
			option = 0;
		} while (option != 5);
	}

}
